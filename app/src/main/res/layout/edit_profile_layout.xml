<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/textbg_color"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <include layout="@layout/comman_top_header" />

        <LinearLayout
            android:id="@+id/llfullview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/_15sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="3"
                android:padding="@dimen/_10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="uploaded photo" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp">

                        <ImageView
                            android:id="@+id/img_user"
                            android:layout_width="@dimen/_100dp"
                            android:scaleType="fitXY"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_height="@dimen/_100dp"
                            android:src="@drawable/ic_launcher_background" />

                        <ImageView
                            android:id="@+id/imvEditImage"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="bottom|right"
                            android:background="@android:drawable/ic_menu_camera" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="uploaded signature" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10dp">

                        <ImageView
                            android:id="@+id/sign_image"
                            android:layout_width="@dimen/_100dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:scaleType="fitXY"
                            android:layout_height="@dimen/_100dp"
                            android:src="@drawable/ic_launcher_background" />

                        <ImageView
                            android:id="@+id/imvEditImage1"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="bottom|right"
                            android:background="@android:drawable/ic_menu_camera" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>


            <!--Enter detail layout-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_PName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="P Name"
                    android:textAllCaps="true"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_FLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_PFatherName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="P Father Name"
                    android:imeOptions="actionNext"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_AlterNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_AltrNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alternate Mob No."
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textAllCaps="true"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_PAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="P Address"
                    android:imeOptions="actionNext"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tt_pan_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_PanNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="P PAN No."
                    android:imeOptions="actionNext"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tt_adharno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_AdharNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="P Adhar No."
                    android:imeOptions="actionNext"
                    android:textAllCaps="true"
                    android:inputType="text"
                    android:paddingTop="@dimen/_20sdp"
                    android:paddingBottom="@dimen/_20sdp"
                    android:textSize="@dimen/_13ssp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSaveDetailChangebg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/_15sdp"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_16dp"
            android:text="@string/save_changes" />

    </LinearLayout>
</RelativeLayout>
