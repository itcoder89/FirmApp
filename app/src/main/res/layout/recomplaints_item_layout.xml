<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/border_view"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="22dp"
            android:text="AC/Split/Installtion" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvServiceId"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:text="Service ID-20200730" />

            <TextView
                android:id="@+id/tvBookingDateTime"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:text="Booking Date &amp; Time" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCustomerName"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Customer Name" />

            <TextView
                android:id="@+id/tvCustomerMobile"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Mobile No." />


        </LinearLayout>

        <TextView
            android:id="@+id/tvFault"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="@dimen/_14ssp"
            android:text="AC/Split/Repair/Less Cooling" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14ssp"
                android:text="Unit 01" />

            <TextView
                android:id="@+id/tvServiceAmount"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:text="Total Amount 1500/-" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:text="Completed Date &amp; Time" />

        <TextView
            android:id="@+id/tvCompleteDateTime"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18dp"
            android:text="" />


        <TextView
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:visibility="gone"
            android:paddingRight="10dp"
            android:textSize="22dp"
            android:text="Visit - 24-07-2020,04-08PM" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="0dp"
                android:layout_weight="2.2"
                android:gravity="left"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="@dimen/_16ssp"
                android:text="" />

            <Button
                android:id="@+id/btnViewMap"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="40dp"
                android:text="View Map" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/lightred"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="View Bill" />


            <TextView
                android:id="@+id/tvClose"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:gravity="right"
                android:layout_gravity="right"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="Close" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>